<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <edu.tjrac.swant.baselib.common.widget.StatusBarPlaceHolderView android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
    />
    <FrameLayout android:layout_width="match_parent" android:layout_height="48dp">
        <!--<ImageView android:layout_width="48dp" android:layout_height="48dp"-->
        <!--android:layout_gravity="right|center_vertical"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:padding="12dp"-->
        <!--android:src="@drawable/ic_help_outline_grey_600_24dp"/>-->
    </FrameLayout>

    <!--<android.support.v4.widget.NestedScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1">-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_cover" android:layout_width="64dp" android:layout_height="64dp"
                       android:layout_marginTop="24dp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" app:layout_constraintEnd_toEndOf="@+id/iv_cover"
                app:layout_constraintStart_toStartOf="@+id/iv_cover"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"/>
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="8dp" android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/tv_name"
                app:layout_constraintStart_toStartOf="@+id/tv_name" app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

        </android.support.constraint.ConstraintLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="64dp">
            <TextView android:id="@+id/tv_zone" android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="0\n动态"
            />
            <TextView android:id="@+id/tv_focus" android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="0\n关注"
            />
            <TextView android:id="@+id/follow" android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:text="0\n粉丝"
            />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_likes"
            android:layout_width="match_parent" android:layout_height="50dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="@string/my_likes"
                android:textColor="@color/text_color_gray"
            />

        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_arts"
            android:layout_width="match_parent" android:layout_height="50dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="@string/my_arts"
                android:textColor="@color/text_color_gray"
            />

        </FrameLayout>
        <View android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_weight="1"></View>
        <FrameLayout
            android:id="@+id/fl_feedback"
            android:layout_width="match_parent" android:layout_height="50dp"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="24dp"
                      android:text="@string/feedback"
                      android:textColor="@color/text_color_gray"
            />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_setting"
            android:layout_width="match_parent" android:layout_height="50dp"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_marginLeft="24dp"
                      android:text="@string/setting"
                      android:textColor="@color/text_color_gray"
            />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/bottom_nav_height"
            android:gravity="center" android:text="copyright @1007991483@qq.com"
            android:textColor="@color/text_color_gray"
        />
    </LinearLayout>


    <!--</android.support.v4.widget.NestedScrollView>-->


</LinearLayout>