<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/card_back_8dp_radius"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:padding="8dp"
        android:src="@mipmap/close"></ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111A34"
        android:textSize="16sp"
        android:text="签到时长(分钟)"
        >

    </TextView>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/search_edit_bg"
        android:gravity="center"
        android:minWidth="230dp"
        android:textColorHint="#C2C7CC"
        android:textSize="16sp"
        android:hint="请输入如5分钟，10分钟">

    </EditText>

    <Button
        android:id="@+id/bt_ensure"
        style="@style/button_positive_square_style"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="26dp"
        android:minWidth="230dp"
        android:text="确定"></Button>
</LinearLayout>